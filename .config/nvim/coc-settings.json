{
  "coc.preferences.autoTrigger": "always",

  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "terraform"
  ],

  "suggest.enablePreview": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.maxPreviewWidth": 80,

  "signature.enable": true,
  "signature.preferShownAbove": false,
  "signature.macWindowHeight": 16,

  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.checkCurrentLine": true,

  // coc-snippets
  "snippets.priority": 100,

  // coc-python
  "python.autoUpdateLanguageServer": true,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": [],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8",

  // coc-yaml
  "yaml.format.enable": true,

  // coc-sql
  "sql.database": "postgresql",

  "go.goplsOptions": {
    "hoverKind": "FullDocumentation",
    "completeUnimported": true
  },

  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
